---
import HeaderLink from './HeaderLink.astro'
import HeaderLogo from './HeaderLogo.astro'
import NavMenu from './NavMenu.astro'
import { SITE_TITLE } from '@/consts'

type Props = {
  isIndex?: boolean
  class?: string
}
const { class: className = "scrolled bg-white shadow-md" } = Astro.props
---

<header
  class=`group fixed top-0 flex justify-between items-center gap-10 py-3 px-6 sm:px-10 w-full text-sail-950 transition-colors ease-in-out z-50 ${className}`
  transition:animate="initial"
>
  <a
    href="/"
    class="flex items-center gap-3 text-white group-[.scrolled]:text-current tracking-tight hover:tracking-widest transition-[letter-spacing] duration-200 ease-in-out"
  >
    <HeaderLogo class="w-10 xs:w-14" />
    <span
      class="text-2xl xs:text-2xl leading-none font-bold lowercase"
      >{SITE_TITLE}</span
    >
  </a>
  <NavMenu>
    <HeaderLink href="/">Inicio</HeaderLink>
    <HeaderLink href="https://calendly.com/jaimegiraldoco" target="_blank"
    rel="noopener noreferrer">Agendate</HeaderLink>
    <HeaderLink href="/blog">Blog</HeaderLink>
  </NavMenu>
</header>
